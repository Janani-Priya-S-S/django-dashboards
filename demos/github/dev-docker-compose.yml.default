version: '3'

services:
  postgres:
    image: postgres:${DOCKER_POSTGRES_VERSION:-latest}
    ports:
      - "5433:5433"
      - "5432:5432"
    volumes:
      - "${DOCKER_POSTGRES_DATA:-./demo-db}:/db"
      - ".:/project"
    environment:
      POSTGRES_DB: demo
      POSTGRES_USER: demo
      POSTGRES_PASSWORD: demo
      PGDATA: /db

  redis:
    image: redis:${DOCKER_REDIS_VERSION:-latest}
    ports:
